Resources:
  sslSecurityGroupIngress: 
    Type: AWS::EC2::SecurityGroupIngress
    Properties:
      GroupId: { Ref: AWSEBSecurityGroup}
      IpProtocol: tcp
      ToPort: 443
      FromPort: 443
      CidrIp: 0.0.0.0/0

packages:
  yum:
    mod24_ssl : []

files:
  "/etc/httpd/conf.d/ssl.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      LoadModule ssl_module modules/mod_ssl.so
      Listen 443

      <VirtualHost *:80>
        RewriteEngine On
        RewriteCond %{HTTP_HOST} !^www\.johannes-maria-frank\.de
        RewriteRule ^(.*)$ http://www.johannes-maria-frank.de/ [R=permanent,L]
        RewriteCond %{HTTP:X-Forwarded-Proto} !https
        RewriteCond %{SERVER_ADDR}   !^127\.0\.0\.1
        RewriteRule !/status https://%{SERVER_NAME}%{REQUEST_URI} [L,R]
      </VirtualHost>

      <VirtualHost *:443>
        <Proxy *>
          Order deny,allow
          Allow from all
        </Proxy>
        SSLEngine on
        SSLProtocol All -SSLv2 -SSLv3
        SSLCertificateFile "/etc/pki/tls/certs/ssl.crt"
        SSLCertificateKeyFile "/etc/pki/tls/certs/ssl.key"
        SSLCertificateChainFile "/etc/pki/tls/certs/sub.class1.server.ca.pem"
        
        ProxyPass / http://localhost:80/ retry=0
        ProxyPassReverse / http://localhost:80/
        ProxyPreserveHost on
        
        LogFormat "%h (%{X-Forwarded-For}i) %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\""
        ErrorLog /var/log/httpd/elasticbeanstalk-error_log
        TransferLog /var/log/httpd/elasticbeanstalk-access_log
      </VirtualHost>
